.row
  - for event in events
    %div{ class: "#{number_of_columns || six} columns" }
      .panel
        %h2= link_to event.title, event_path(event)
        %p
          = l event.scheduled_date, format: :long unless event.scheduled_date.nil?
        %p
          = event.location
        %p
          = event.description

- @map_div_id = "event_map_#{event.id}"
.panel.radius
  .row
    .twelve.columns
      %h3
        = event.title
        - if user_signed_in? && current_user.is_admin?
          = link_to "Edit", rails_admin.edit_path('event', event.id), class: "label alert", style: "vertical-align:middle"
  .row
    .five.columns
      .row
        .twelve.columns
          %p
            %span.label.radius
              When
            <br/>
            = l event.scheduled_date, format: :long unless event.scheduled_date.nil?
          .address
            %p
              %span.label.radius
                Where
              <br/>
              = event.location
          %p
            %span.label.radius
              Description
            <br/>
            = event.description
    .seven.columns
      %p
        .map{ id: @map_div_id }

:javascript
  window.initializeMap("#{event.location}", "#{@map_div_id}")

- content_for :header_content do
  .row-fluid
    .span8.offset2
      .page-header
        %h2
          Forgot your password? 
          %br
          %small
            Fill out your email address and we'll send you instructions to reset your password
.row-fluid
  .span8.offset2
    .hero-unit
      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { class: 'form-horizontal', :method => :post }) do |f|
        = devise_error_messages!
        %fieldset
          .control-group
            = f.label :email, class: 'control-label', for: 'input-email'
            .controls
              = f.email_field :email, id: 'input-email'
          .control-group
            .controls
              = f.submit "Send me password reset instructions"
          .control-group
            .controls
              = render "devise/shared/links"
